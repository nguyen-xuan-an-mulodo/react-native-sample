{
  "name": "BReactNative",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "build-ios-debug": "xcodebuild -project ios/BReactNative.xcodeproj -scheme BReactNative -derivedDataPath ios/build -sdk iphonesimulator -configuration Debug",
    "build-ios-release": "xcodebuild -project ios/BReactNative.xcodeproj -scheme BReactNative -derivedDataPath ios/build -sdk iphonesimulator -configuration Release",
    "build-android-debug": "cd android && ./gradlew assembleDebug && cd ..",
    "build-android-release": "cd android && ./gradlew assembleRelease && cd ..",
    "appium": "appium",
    "test": "jest",
    "e2e": "jest --testMatch '**/?(*.)+(e2e).js?(x)'",
    "e2e-ios": "yarn e2e",
    "e2e-android": "IS_ANDROID=true yarn e2e"
  },
  "dependencies": {
    "react": "16.3.1",
    "react-native": "0.55.4"
  },
  "devDependencies": {
    "appium": "^1.9.0",
    "babel-jest": "23.4.2",
    "babel-preset-react-native": "4.0.0",
    "jest": "23.5.0",
    "react-test-renderer": "16.3.1",
    "wd": "^1.10.3"
  },
  "jest": {
    "preset": "react-native"
  }
}
